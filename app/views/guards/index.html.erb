<h1>Guards</h1>


<table>
  <thead>
    <tr>
  
      <th>Date</th>
      <th>Trabajador</th>
      <th>Medical center</th>
  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guards.each do |guard| %>
      <tr class="bg-<%= (guard.date < Date.today.beginning_of_day) ? 'danger' : 'success'%>">
        <td><%= guard.date %></td>  
        <td><%=  guard.worker.full_name %></td>
        <td><%= guard.medical_center.name %></td>
        <td><%= link_to 'Show', guard %></td>
        <td><%= link_to 'Edit', edit_guard_path(guard) %></td>
        <td><%= link_to 'Destroy', guard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

